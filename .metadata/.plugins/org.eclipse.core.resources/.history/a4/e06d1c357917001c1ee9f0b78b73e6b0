package ch01;

public class IncreaseDecreaseOperationExample {

	public static void main(String[] args) {
	/* 단항 연산자 - 중감, ++, --*/
		int x = 10;
		int y = 10;
		int z;
		
		//단독 연산이 아닌 다른연산과 함꼐 실행되는 경우 
		z=x++;
		System.out.println(z);// 10
		System.out.println(x);// 11

		//현재 x=11 , z=10
		z=++x;
		System.out.println(z);// 10
		System.out.println(x);// 11
	}
}
